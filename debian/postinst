#!/bin/sh
# postinst script for opennetadmin-plugin-build-bind
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# TODO: read from ONA or debconf
ONA='ona.rb -u http://localhost/opennetadmin/dcm.php -l admin -p admin'

case "$1" in
    configure)
        # create entries in dcm_module_list table
        $ONA -r add_module \
             name=build_bind_conf \
             file=../plugins/build_bind/build_bind.inc.php \
             desc='Build BIND DNS config file'
        $ONA -r add_module \
             name=build_bind_zone \
             file=../plugins/build_bind/build_bind.inc.php \
             desc='Build BIND DNS zone file'
        $ONA -r add_module \
             name=build_bind_server_domain_list \
             file=../plugins/build_bind/build_bind.inc.php \
             desc='List domains associated with a server'
        $ONA -r ona_sql sql="insert into sys_config (name,value,description,"\
             "field_validation_rule,failed_rule_text,editable,deleteable) " \
             "values ('build_dns_type','bind','DNS build type','','',1,1)"\
             " on duplicate key update value='bind'" commit=Y
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
